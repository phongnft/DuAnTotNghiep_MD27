<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MyInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="150dp">
            <ImageView
                android:id="@+id/img_my_if"
                android:src="@drawable/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/tv_name_if"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:layout_marginRight="5dp"
            android:hint="Vui lòng nhập tên"
            android:textSize="20dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Địa chỉ"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_diachi_my_if"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="Vui lòng thêm địa chỉ"
                android:textSize="20dp"
                android:maxLines="1"
                android:maxLength="30"
                android:gravity="right|center"
                android:paddingRight="35dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_email_if"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Email"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_email_my_if"
                android:layout_width="282dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="right|center"
                android:hint="Vui lòng thêm email"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingRight="25dp"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Số điện thoại"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_sdt_my_if"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"

                android:gravity="right|center"
                android:hint="Vui lòng thêm số điện thoại"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingRight="25dp"
                android:textSize="20dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_my_if"
            android:layout_width="200dp"
            android:layout_marginBottom="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittex"
            android:padding="3dp"
            android:text="Sửa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>