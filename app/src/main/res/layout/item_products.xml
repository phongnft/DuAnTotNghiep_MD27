<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_itemproduct"
    android:layout_width="190dp"
    android:background="@drawable/border_cardview"
    android:layout_height="300dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgproducts"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/img_product4" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:id="@+id/tv_nameproduct"
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:text="áo thun nam Bat chất vi tuyet"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_priceproduct"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="123000đ"
                    android:textColor="#CC0606"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imgShopnow"
                    android:src="@drawable/img_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>