<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_itemproduct"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/card_itemproducttt"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <ImageView
            android:id="@+id/imgproducts"
            android:src="@drawable/img_product"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <TextView
            android:id="@+id/tv_nameproduct"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="áo thun nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_priceproduct"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="123000đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="Mua ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>