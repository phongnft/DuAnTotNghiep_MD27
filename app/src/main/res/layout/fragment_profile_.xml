<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customtext"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_next_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:cardCornerRadius="150dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logoapp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_pro"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Nguyễn Văn Phong" />

                <TextView
                    android:id="@+id/tv_sdt_pro"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="0334158096" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:drawableRight="@drawable/baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customtext"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_donhang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:scaleType="fitXY"
                android:src="@drawable/img_2" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawablePadding="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="Lịch sử mua hàng"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:drawableRight="@drawable/baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customtext"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_doimk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_3" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawablePadding="15dp"
                    android:paddingLeft="21dp"
                    android:paddingTop="15dp"
                    android:text="Đặt lại mật khẩu "

                    />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:drawableRight="@drawable/baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customtext"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_facebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_12" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawablePadding="15dp"
                    android:paddingLeft="21dp"
                    android:paddingTop="15dp"
                    android:text="Fanpage "

                    />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:drawableRight="@drawable/baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customtext"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_dangxuat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_13" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawablePadding="15dp"
                    android:paddingLeft="21dp"
                    android:paddingTop="15dp"
                    android:text="Đăng Xuất "

                    />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:drawableRight="@drawable/baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logoapp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Closet Store"
            android:textSize="30dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_sdt_store"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="HotLine:"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_14">

            </ImageView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="0334158096"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_email_store"
            android:layout_marginLeft="25dp"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email:"
                android:textSize="20dp" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_15">

            </ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="closetstore@gmail.com"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>