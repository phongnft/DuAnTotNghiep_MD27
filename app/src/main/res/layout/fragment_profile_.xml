<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/customtext"
    android:layout_height="50dp">

    <LinearLayout
        android:id="@+id/tv_next_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logoapp" />
        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_name_pro"
                android:paddingLeft="10dp"
                android:text="Nguyễn Văn Phong"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_sdt_pro"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:text="0334158096"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/tv_donhang"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_menu_book_24"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="Lịch sử mua hàng"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        />


    <TextView
        android:id="@+id/tv_gioithieu"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_menu_book_24"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="Giới thiệu về chúng tôi"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        />
    <TextView
        android:id="@+id/tv_facebook"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/img_5"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="Fanpage"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        />
    <TextView
        android:id="@+id/tv_dangxuat"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/img_7"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="Đăng Xuất"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <ImageView

            android:src="@drawable/logoapp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Closet Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="HotLine:"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sdt_store"
            android:text="0334158096"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
           android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Email:"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_email_store"
            android:text="closetstore@gmail.com"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>