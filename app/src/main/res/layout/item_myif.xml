<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_my_if"
                android:src="@drawable/img_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:textColor="#FF5722"
                android:id="@+id/tv_name_if"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Nguyễn Văn A"
                android:textSize="23dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_emoji_people_24"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Tuổi"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_tuoi_my_if"
                android:maxLines="1"
                android:maxLength="3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="18"
                android:textSize="20dp"
                android:gravity="right|center"
                android:paddingRight="80dp"
                android:background="@drawable/customeditif" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Địa chỉ"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_diachi_my_if"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="Trịnh Văn Bô"
                android:textSize="20dp"
                android:maxLines="1"
                android:maxLength="30"
                android:gravity="right|center"
                android:paddingRight="35dp"
                android:background="@drawable/customeditif" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_email_if"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Email"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_email_my_if"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="fpt@gmail.com"
                android:textSize="20dp"
                android:gravity="right|center"
                android:paddingRight="25dp"
                android:maxLines="1"
                android:maxLength="30"
                android:background="@drawable/customeditif" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customeditif"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Số điện thoại"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_sdt_my_if"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="03551324546"
                android:textSize="20dp"
                android:gravity="right|center"
                android:paddingRight="25dp"
                android:maxLines="1"
                android:maxLength="30"
                android:background="@drawable/customeditif" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_my_if"
            android:layout_width="200dp"
            android:layout_marginBottom="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittex"
            android:padding="3dp"
            android:text="Sửa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>